 THIS IS FRIEND FUNCTION PROGRAM

#include<iostream>
using namespace std;
class B;
class A
{
	private:
		int a;
	public:
		void virat(int x)
		{
			a=x;
		}
		friend void virat(A,B);
};
class B
{
	private:
		int b;
	public:
		void virat(int y)
		{
			b=y;
		}
		friend void virat(A,B);
};
void virat(A a1, B b1)
{
	cout<<"sum is"<<"\n"<<a1.a+b1.b;
}
int main()
{
	A A1;
	B B1;
	A1.virat(10);
	B1.virat(12);
	virat(A1,B1);
}
