#include<iostream>
using namespace std;
int main()
{
  int a,b;
  cout<<"Enter values of a & b";
  cin>>a>>b;
  int z=a-b;
  try 
  {
   if (z!=0)
    {
      cout<<a/z;
    }
   else
    {
      throw z;
    }
  }  
  catch ( int i)
   {
     cout<<"Exception caught ":Divide by zero;
   }
   return 0;
 }
